{
    "manifest_version": 2,
    "name": "E-Okul Ortalama Hesaplayıcı",
    "version": "1.0",
    "author": "thesseyren",
    "description": "Notlarınızı düzenleyerek dönem sonu ortalamanızı ve alacağınız belgeyi görebilirsiniz.",
    "icons":{
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://eokulyd.meb.gov.tr/*",
                "*://e-okul.meb.gov.tr/*"
            ],
            "js": [
                "hesapla.js"
            ]
        }
    ],
    "options_ui": {
        "page": "ayarlar.html"
    },
    "permissions": [
        "storage"
    ]
}